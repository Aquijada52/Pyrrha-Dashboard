  "license": "Apache-2.0",
  "dependencies": {
    "@carbon/charts": "^0.40.0",
    "@carbon/charts-react": "^0.40.0",
    "@carbon/grid": "^10.15.0",
    "@carbon/icons-react": "^10.17.0",
    "@carbon/layout": "^10.13.0",
    "@carbon/themes": "^10.18.0",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-knobs": "^6.0.21",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "apollo-boost": "0.4.2",
    "axios": "^0.20.0",
    "babel-loader": "^8.1.0",
    "carbon-components": "10.3.0",
    "carbon-components-react": "7.3.0",
    "carbon-icons": "7.0.7",
    "d3": "5.x",
    "graphql": "14.3.1",
    "node-sass": "4.13.1",
    "react": "^16.13.1",
    "react-apollo": "2.5.6",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "start-api": "cd api && ./venv/bin/flask run --no-debugger",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "ci-check": "yarn format:diff",
    "clean": "yarn cache clean && yarn install",
    "format": "prettier --write \"**/*.{js,md,scss}\"",
    "format:diff": "prettier --list-different \"**/*.{js,md,scss}\"",
    "format:staged": "prettier --write",
    "deploy": "rm -rf ./build && yarn build && ibmcloud cf push -f manifest.yml"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:react-hooks/recommended"
    ]
  },
  "proxy": "http://localhost:5000",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-plugin-react-hooks": "^4.2.0"
  }
}
